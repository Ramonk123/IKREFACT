<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.stage.Screen?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="nl.hsleiden.AfkoApp.Views.SubmitView"
           fx:id="root"
           stylesheets="@../css/afko.css">

    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>

    <BorderPane fx:id="pane" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}">
        <top>
            <BorderPane fx:id="header" prefWidth="${pane.width}" prefHeight="${pane.height*0.15}">
                <left>
                    <HBox>
                        <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                        <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                        <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                        <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                    </HBox>
                </left>
                <center>
                    <HBox alignment="CENTER">
                        <ImageView preserveRatio="true" fitHeight="${header.prefHeight}">
                            <Image url="@../assets/logo.png"/>
                        </ImageView>
                    </HBox>
                </center>
                <right>
                    <HBox styleClass="navBar" alignment="BOTTOM_RIGHT">
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Afkotheek"
                                onMouseClicked="#switchToAfkotheek"/>
                        <Button styleClass="navButton, currentButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Afko Indienen"/>
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Game"
                                onMouseClicked="#switchToGame"/>
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Admin"
                                onMouseClicked="#switchToAdmin"/>
                    </HBox>
                </right>
            </BorderPane>
        </top>

        <center>
            <BorderPane fx:id="submit" styleClass="submit" prefWidth="${pane.width}" prefHeight="${pane.height*0.85}">
                <left>
                    <BorderPane styleClass="submitAdd, pane" prefHeight="${submit.prefHeight*0.9}" prefWidth="${submit.prefWidth*0.5}">
                        <center>
                            <Pane fx:id="additionPane" styleClass="innerPane">
                                <VBox spacing="2">
                                    <TextField fx:id="abbreviation" onKeyTyped="#findAbbreviations" promptText="Afkorting" prefWidth="${additionPane.prefWidth*0.8}"
                                               prefHeight="${additionPane.prefHeight*0.05}"/>
                                    <TextField fx:id="definition" promptText="Definitie"/>
                                    <ComboBox fx:id="department"/>
                                    <Label />
                                    <CheckBox fx:id="confirm" onAction="#setButtonInCorrectState" text="Bent u er zeker van dat de ingevulde informatie compleet is?" wrapText="true"/>
                                    <Label />
                                    <Button onAction="#submitAbbreviation" fx:id="submitButton" text="Toevoegen"/>
                                </VBox>
                            </Pane>
                        </center>
                    </BorderPane>
                </left>

                <right>
                    <BorderPane styleClass="submitResults, pane" prefHeight="${submit.prefHeight*0.9}" prefWidth="${submit.prefWidth*0.3}">
                        <center>
                            <Pane styleClass="innerPane" prefHeight="${submit.prefHeight*0.9}" prefWidth="${submit.prefWidth*0.3}">
                                <ScrollPane fx:id="results" prefHeight="${submit.prefHeight*0.9}" prefWidth="${submit.prefWidth*0.28}">
                                    <BorderPane prefWidth="${results.prefWidth*0.95}">
                                        <left>
                                            <VBox spacing="2" fx:id="resultabbrs"/>
                                        </left>
                                        <right>
                                            <VBox spacing="2" fx:id="resultdeps" />
                                        </right>
                                    </BorderPane>
                                </ScrollPane>
                            </Pane>
                        </center>
                    </BorderPane>
                </right>
            </BorderPane>
        </center>
    </BorderPane>
</StackPane>