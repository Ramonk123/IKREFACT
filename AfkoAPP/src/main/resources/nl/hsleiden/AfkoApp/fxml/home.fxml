<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.stage.Screen?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="nl.hsleiden.AfkoApp.Views.HomeView"
           fx:id="root"
           stylesheets="@../css/afko.css">

    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>

    <BorderPane fx:id="pane" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}">
        <top>
            <BorderPane fx:id="header" prefWidth="${pane.width}" prefHeight="${pane.height*0.15}">
                    <left>
                        <HBox>
                            <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                            <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                            <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                            <Label prefHeight="${header.prefHeight*0.4}" prefWidth="${header.prefWidth*0.08}"/>
                        </HBox>
                    </left>
                <center>
                    <HBox alignment="CENTER">
                        <ImageView preserveRatio="true" fitHeight="${header.prefHeight}">
                            <Image url="@../assets/logo.png"/>
                        </ImageView>
                    </HBox>
                </center>
                <right>
                    <HBox styleClass="navBar" alignment="BOTTOM_RIGHT">
                        <Button styleClass="navButton, currentButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Afkotheek"/>
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Afko Indienen"
                                onMouseClicked="#switchToSubmit"/>
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Game"
                                onMouseClicked="#switchToGame"/>
                        <Button styleClass="navButton" prefHeight="${header.prefHeight*0.4}"
                                prefWidth="${header.prefWidth*0.08}" text="Admin"
                                onMouseClicked="#switchToAdmin"/>
                    </HBox>
                </right>
            </BorderPane>
        </top>

        <center>
            <BorderPane styleClass="home" fx:id="home" prefWidth="${pane.width}" prefHeight="${pane.height*0.85}">
                <left>
                    <BorderPane styleClass="pane" prefHeight="${home.prefHeight*0.9}" prefWidth="${home.prefWidth*0.5}">
                        <center>
                            <Pane styleClass="innerPane" prefHeight="${home.prefHeight*0.9}" prefWidth="${home.prefWidth*0.5}">
                                <VBox spacing="10">
                                    <HBox spacing="5">
                                        <TextField fx:id="searchBox" promptText="Afko Zoeken..." onKeyTyped="#findAbbreviations"/>
                                        <ComboBox fx:id="departmentFilter" onAction="#findAbbreviations"/>
                                    </HBox>

                                    <ScrollPane fx:id="results" prefHeight="${home.prefHeight*0.85}"
                                                prefWidth="${home.prefWidth*0.3}">
                                        <BorderPane prefWidth="${results.prefWidth}">
                                            <left>
                                                <VBox spacing="2" fx:id="abbrs" styleClass="results"/>
                                            </left>
                                            <center>
                                                <VBox spacing="2" fx:id="defs" styleClass="results"/>
                                            </center>
                                            <right>
                                                <VBox spacing="2" fx:id="reports" alignment="CENTER_RIGHT"/>
                                            </right>
                                        </BorderPane>
                                    </ScrollPane>
                                </VBox>
                            </Pane>
                        </center>
                    </BorderPane>
                </left>

                <right>
                    <BorderPane styleClass="pane" prefHeight="${home.prefHeight*0.9}" prefWidth="${home.prefWidth*0.3}">
                        <center>
                            <Pane styleClass="innerPane" prefHeight="${home.prefHeight*0.9}" prefWidth="${home.prefWidth*0.3}">
                                <VBox fx:id="newabbreviations" spacing="5">
                                    <Label text="Nieuwe Afko's"/>
                                    <ScrollPane fx:id="new" prefHeight="${home.prefHeight*0.86}" prefWidth="${home.prefWidth*0.25}">
                                        <BorderPane prefWidth="${new.prefWidth*0.95}">
                                            <left>
                                                <VBox spacing="2" fx:id="newabbrs" styleClass="results"/>
                                            </left>
                                            <center>
                                                <VBox spacing="2" fx:id="newdefs" styleClass="results"/>
                                            </center>
                                            <right>
                                                <VBox spacing="2" fx:id="newreports"/>
                                            </right>
                                        </BorderPane>
                                    </ScrollPane>
                                </VBox>
                            </Pane>
                        </center>
                    </BorderPane>
                </right>
            </BorderPane>
        </center>
    </BorderPane>

</StackPane>
